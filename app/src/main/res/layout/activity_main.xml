<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hnle_pset1.MainActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_weight="0.13"
        app:srcCompat="@drawable/body"
        android:contentDescription="@string/potato" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="6">

        <CheckBox
            android:id="@+id/arms"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/arms" />

        <CheckBox
            android:id="@+id/eyes"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/eyes" />

        <CheckBox
            android:id="@+id/shoes"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/shoes" />

        <CheckBox
            android:id="@+id/ears"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="2"
            android:text="@string/ears" />

        <CheckBox
            android:id="@+id/eyebrows"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/eyebrows" />

        <CheckBox
            android:id="@+id/glasses"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="3"
            android:text="@string/glasses" />

        <CheckBox
            android:id="@+id/hat"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/hat" />

        <CheckBox
            android:id="@+id/mouth"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/mouth" />

        <CheckBox
            android:id="@+id/mustachcio"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="5"
            android:text="@string/mustachcio" />

        <CheckBox
            android:id="@+id/nose"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="5"
            android:text="@string/nose" />
    </GridLayout>



</LinearLayout>
