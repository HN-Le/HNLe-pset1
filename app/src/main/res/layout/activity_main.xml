<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hnle_pset1.MainActivity"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.80"
            android:contentDescription="@string/body"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/arms"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.80"
            android:contentDescription="@string/arms"
            android:visibility="invisible"
            app:srcCompat="@drawable/arms" />

        <ImageView
            android:id="@+id/ears"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.80"
            android:contentDescription="@string/arms"
            android:visibility="invisible"
            app:srcCompat="@drawable/ears" />

        <ImageView
            android:id="@+id/eyebrows"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.80"
            android:contentDescription="@string/eyebrows"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.80"
            android:contentDescription="@string/eyes"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyes" />

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.80"
            android:contentDescription="@string/glasses"
            android:visibility="invisible"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/hat"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.80"
            android:contentDescription="@string/hat"
            android:visibility="invisible"
            app:srcCompat="@drawable/hat" />

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.80"
            android:contentDescription="@string/mouth"
            android:visibility="invisible"
            app:srcCompat="@drawable/mouth" />

        <ImageView
            android:id="@+id/mustachcio"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.80"
            android:contentDescription="@string/mustachcio"
            android:visibility="invisible"
            app:srcCompat="@drawable/mustache" />

        <ImageView
            android:id="@+id/nose"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.80"
            android:contentDescription="@string/nose"
            android:visibility="invisible"
            app:srcCompat="@drawable/nose" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:contentDescription="@string/shoes"
            android:visibility="invisible"
            app:srcCompat="@drawable/shoes"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="6">

        <CheckBox
            android:id="@+id/checkbox_arms"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/checkbox_arms"
            android:onClick="armsclicked"/>

        <CheckBox
            android:id="@+id/checkbox_eyes"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/checkbox_eyes"
            android:onClick="eyesclicked"/>

        <CheckBox
            android:id="@+id/checkbox_shoes"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/checkbox_shoes"
            android:onClick="shoesclicked"/>

        <CheckBox
            android:id="@+id/checkbox_ears"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="2"
            android:text="@string/checkbox_ears"
            android:onClick="earsclicked"/>

        <CheckBox
            android:id="@+id/checkbox_eyebrows"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/checkbox_eyebrows"
            android:onClick="eyebrowsclicked"/>

        <CheckBox
            android:id="@+id/checkbox_glasses"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="3"
            android:text="@string/checkbox_glasses"
            android:onClick="glassesclicked"/>

        <CheckBox
            android:id="@+id/checkbox_hat"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/checkbox_hat"
            android:onClick="hatclicked"/>

        <CheckBox
            android:id="@+id/checkbox_mouth"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/checkbox_mouth"
            android:onClick="mouthclicked"/>

        <CheckBox
            android:id="@+id/checkbox_mustachcio"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="5"
            android:text="@string/checkbox_mustachcio"
            android:onClick="mustachcioclicked"/>

        <CheckBox
            android:id="@+id/checkbox_nose"
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="5"
            android:text="@string/checkbox_nose"
            android:onClick="noseclicked"/>
    </GridLayout>



</LinearLayout>
